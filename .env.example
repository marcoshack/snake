# Anthropic API key for accessing Claude models
ANTHROPIC_API_KEY=

# OpenSearch connection for fetching Rust server logs
OPENSEARCH_HOST=
OPENSEARCH_PORT=9200
OPENSEARCH_USER=
OPENSEARCH_PASSWORD=
OPENSEARCH_INDEX=
OPENSEARCH_RESULT_SIZE=10000

# Discord webhook for posting admin alerts
DISCORD_RUST_ADMIN_WEBHOOK=

# Chat API endpoint for sending messages to Rust server Global chat (full URL including path)
SNAKE_CHAT_API_ENDPOINT=

# Directory where HTML reports are saved (host path, overridden in container)
REPORT_OUTPUT_DIR=./reports

# Directory where agent logs are saved (host path, overridden in container)
LOG_DIR=./logs

# Agents to run with per-agent frequency (name:frequency pairs, e.g., "operational-report:1h,admin-chatbot:10m")
SNAKE_AGENTS=operational-report:24h

# Directory containing agent definition files
SNAKE_AGENTS_DIR=./agents

# Directory where agent session data is persisted (conversation history across restarts)
SNAKE_SESSIONS_DIR=./sessions
